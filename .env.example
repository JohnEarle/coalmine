# Coalmine Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database
# =============================================================================
POSTGRES_USER=coalmine
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=coalmine

# Full DATABASE_URL (constructed from above or override directly)
# DATABASE_URL=postgresql://coalmine:changeme_secure_password@postgres:5432/coalmine

# =============================================================================
# AWS Credentials (for AWS canaries)
# =============================================================================
# Option 1: Access keys
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Option 2: Use IAM roles (leave keys blank if using roles)

# =============================================================================
# GCP Credentials (for GCP canaries)
# =============================================================================
# Path to service account JSON file mounted in container
GOOGLE_APPLICATION_CREDENTIALS=/app/gcp-credentials.json

# Or set GCP project directly
# GCP_PROJECT_ID=your-project-id

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Celery (usually leave defaults)
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# WebUI Configuration
# =============================================================================
# Admin user for WebUI login
WEBUI_ADMIN_USER=admin
WEBUI_ADMIN_PASSWORD=changeme_secure_password

# API Keys for programmatic access
# COALMINE_API_KEY_AUTOMATION=your-automation-key
# COALMINE_API_KEY_DASHBOARD=your-dashboard-key
